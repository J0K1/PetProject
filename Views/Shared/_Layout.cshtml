<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] – PetProject</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <header class="site-header">
        <nav class="main-nav">
            <div class="nav-left">
                <a asp-controller="Pages" asp-action="Store" class="nav-link">Магазин</a>
                <a asp-controller="Pages" asp-action="Register" class="nav-link">Регистрация</a>
            </div>
            <div class="nav-right">
                <!-- Кнопка входа -->
                <a asp-controller="Pages" asp-action="Login" class="btn btn-login">Войти</a>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
