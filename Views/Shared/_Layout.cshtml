<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – PetProject</title>

    <!-- CSS из wwwroot/css/site.css -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar-nav">
            <a asp-controller="Pages" asp-action="Store">Магазин</a>
            <a asp-controller="Pages" asp-action="Register">Регистрация</a>
        </nav>
        <nav>
            <a asp-controller="Pages" asp-action="Login" class="login-button">Войти</a>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)
</body>
</html>
